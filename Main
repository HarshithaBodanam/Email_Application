package emailapp;

public class EmailApp {
    public static void main(String[] args) {
        // Create a new employee and generate email
        Email em1 = new Email("John", "Doe");
        
        // Display information about the employee
        System.out.println(em1.showInfo());
        
        // Optional: Change email settings
        em1.setAlternateEmail("john.doe@gmail.com");
        System.out.println("Alternate email: " + em1.getAlternateEmail());
    }
}
